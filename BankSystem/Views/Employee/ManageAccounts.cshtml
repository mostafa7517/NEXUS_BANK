@model IEnumerable<BankSystem.Data.BankAccount>
@{
    ViewData["Title"] = "Manage Accounts";
}
<style>
    body{
        background-image: url('../img/c5.jpg');
        background-size: cover;
        background-repeat: repeat;
        background-position: center;
        height: 80vh;
        color: var(--text);
        font-family: 'Montserrat', Arial, sans-serif;
    }


</style>

<div class="container mt-5">
    <h2>All Accounts</h2>
    <table class="table table-hover mt-4">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
                <tr>
                    <td>@account.Id</td>
                    <td>@account.Customer?.Name</td>
                    <td>@account.Balance.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>
