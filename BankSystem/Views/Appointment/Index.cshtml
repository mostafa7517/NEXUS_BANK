@model IEnumerable<BankSystem.Data.Appointment>

@{
    ViewData["Title"] = "My Appointments";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - Nexus Bank</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <style>
        :root {
            --primary: #7ea1ce;
            --secondary: #bdd7ee;
            --deep-blue: #285686;
            --header-bg: #c3daf4;
            --footer-bg: #7ea1ce;
            --footer-light: #c3daf4;
            --white: #f8f8fa;
            --text: #19557b;
            --danger: #dc3545;
        }

        body {
            font-family: 'Montserrat', Arial, sans-serif;
            margin: 0;
            background: var(--white);
            color: var(--text);
            line-height: 1.5;
        }

        /* Header */
        .navbar {
  background-color: #003366;
 border: 3px solid #FFF2F2;
  border-radius: 30px;
  padding: 10px 30px;
  margin: 20px auto;
  width: 90%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo {
  display: flex;
  align-items: center;
  gap: 10px;
  font-weight: bold;
  color: #fff;
}

.logo img {
  width: 40px;
  height: 40px;
    transform: scale(1.5); 
border-radius: 50%;
margin-left:160% ;
}

.logo .highlight {
  color: #d0d0ff;
}

.nav-links {
  list-style: none;
  display: flex;
  gap: 25px;
  margin:0;
  padding-right:35%;
}

.nav-links a {
  color:#ffffff;
  cursor: pointer;
  transition: 0.3s;
  padding: 6px 16px;
  border-radius: 20px;
  font-family: "Tagesschrift", system-ui;
  font-size:1.2rem;
              text-decoration: none;

}

        /* Container */
        .container {
            max-width: 1080px;
            margin: 48px auto 80px auto;
            padding: 0 40px;
            color: var(--text);
        }

        /* Appointments Section */
        .appt-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
            flex-wrap: wrap;
        }

            .appt-header h2 {
                font-size: 2.8rem;
                font-weight: 700;
                color: var(--deep-blue);
                margin: 0;
                display: flex;
                align-items: center;
                gap: 0.5em;
                user-select: none;
            }

        .btn-primary {
            background: var(--deep-blue);
            color: #fff;
            font-weight: 700;
            padding: 12px 28px;
            border-radius: 25px;
            font-size: 1rem;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            transition: background 0.25s;
        }

            .btn-primary:hover,
            .btn-primary:focus {
                background: #13335a;
                color: #fff;
            }

        .alert-success {
            background: #d1e7dd;
            color: #0f5132;
            border-radius: 25px;
            padding: 18px 28px;
            margin-bottom: 24px;
            font-size: 1rem;
        }

        .alert-info {
            background: #cff4fc;
            color: #055160;
            border-radius: 25px;
            padding: 18px 28px;
            margin-bottom: 24px;
            font-size: 1rem;
        }

        .card-appointments {
            background: #003366;
            border-radius: 40px;
            padding: 30px 36px;
            box-shadow: 0 0 15px rgba(40, 86, 134, 0.1);
            color: #fff;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            color: var(--deep-blue);
            background: #fff;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 2px 10px #bed7ee77;
            font-size: 1rem;
        }

        thead tr {
            background: var(--header-bg);
            color: var(--deep-blue);
            font-weight: 700;
            font-size: 1.1rem;
        }

        th,
        td {
            padding: 18px 24px;
            text-align: left;
            vertical-align: middle;
            border-bottom: 1.5px solid var(--secondary);
        }

        tbody tr:hover {
          
            cursor: pointer;
        }

        .badge {
            display: inline-block;
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            text-align: center;
            min-width: 85px;
        }

        .bg-warning {
            background-color: #ffc107;
            color: #3a3a00;
        }

        .bg-success {
            background-color: #28a745;
            color: #e5fcec;
        }

        .bg-info {
            background-color: #17a2b8;
            color: #e0f3f9;
        }

        .bg-danger {
            background-color: #dc3545;
            color: #fff;
        }

        .bg-secondary {
            background-color: #6c757d;
            color: #fff;
        }

        .btn-cancel {
            color: var(--danger);
            background: transparent;
            border: 2px solid var(--danger);
            border-radius: 25px;
            padding: 8px 20px;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s, color 0.2s;
            text-decoration: none;
            display: inline-block;
        }

            .btn-cancel:hover,
            .btn-cancel:focus {
                background: var(--danger);
                color: #fff;
                text-decoration: none;
            }

        /* Article */
        .main-article {
            max-width: 1080px;
            margin: 80px auto 100px auto;
            padding: 0 40px;
            display: flex;
            gap: 48px;
            color: var(--text);
            flex-wrap: wrap;
        }

        .article-image {
            flex: 1 1 320px;
            border-radius: 40px;
            overflow: hidden;
            box-shadow: 0 0 36px #7ea1ceaa;
            min-width: 280px;
            max-width: 480px;
        }

            .article-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 40px;
                display: block;
            }

        .article-content {
            flex: 1.3 1 480px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .article-content h1 {
                font-size: 3rem;
                font-weight: 700;
                margin-bottom: 16px;
                color: var(--deep-blue);
            }

            .article-content p {
                font-size: 1.18rem;
                font-weight: 300;
                margin-bottom: 0;
                line-height: 1.6;
            }

        /* Testimonials */
        .testimonials-section {
            max-width: 1080px;
            margin: 0 auto 100px auto;
            padding: 0 40px;
            text-align: center;
            color: var(--deep-blue);
        }

            .testimonials-section h2 {
                font-size: 2.8rem;
                font-weight: 700;
                margin-bottom: 16px;
            }

        .toggle-group {
            margin: 16px auto 32px auto;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 2em;
            background: #003366;
            padding: 0.25em 0.44em;
            max-width: 350px;
            gap: 6px;
        }

        .toggle-btn {
            flex: 1;
            padding: 0.6em 2.1em;
            border-radius: 1.3em;
            background: var(--secondary);
            font-size: 1.03em;
            font-weight: 600;
            color: #232c3a;
            border: none;
            margin: 0.23em 0.1em;
            transition: background 0.16s, color 0.12s, box-shadow 0.13s;
            cursor: pointer;
            outline: none;
            min-width: 140px;
        }

            .toggle-btn.inactive {
                background: transparent;
                color: #f3f3f3;
                font-weight: 400;
            }

            .toggle-btn:focus,
            .toggle-btn:hover {
                background: var(--deep-blue);
                color: #fff;
                box-shadow: 0 1px 10px #bdd7ee44;
            }

        .carousel {
            background:#003366;
            border-radius: 55px;
            padding: 32px 20px;
            margin: 0 auto 40px auto;
            display: flex;
            align-items: center;
            max-width: 1100px;
            min-height: 260px;
            position: relative;
            box-sizing: border-box;
            justify-content: center;
            color: var(--deep-blue);
        }

        .carousel-cards {
            flex: 1;
            display: flex;
            justify-content: space-between;
            gap: 18px;
            margin: 0 1em;
            overflow-x: auto;
            padding-bottom: 5px;
            scrollbar-width: thin;
        }

        .carousel-card {
            background: linear-gradient(135deg, #003366 0%, #764ba2 100%);
            border-radius: 26px;
            flex: 1 0 260px;
            padding: 25px 22px 28px 22px;
            margin: 0 8px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-height: 167px;
            color: var(--deep-blue);
            font-size: 1.04rem;
            align-items: center;
            position: relative;
            scroll-snap-align: center;
        }

            .carousel-card .quote {
                font-size: 2.3em;
                font-weight: bold;
                color: White;
                margin-bottom: 10px;
                margin-top: -22px;
                line-height: 0.6;
            }

        .card-content {
            margin-bottom: 18px;
            color: White;

        }

        .carousel-card .author {
            font-weight: 700;
            color: white;
            margin-top: 14px;
            font-size: 1.1em;
            letter-spacing: 0.01em;
            text-align: right;
            width: 100%;
        }

        /* Footer */
       .footer {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 2rem 0;
            position: relative;
            overflow: hidden;
        }

        .footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 50%);
            pointer-events: none;
        }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            z-index: 2;
        }

        .footer-main {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .footer-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .flogo {
            background: rgba(255, 255, 255, 0.2);
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .bank-name {
            font-size: 2rem;
            font-weight: 300;
            letter-spacing: 1px;
        }

        .contact-info {
            display: flex;
            gap: 2rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .contact-item:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .contact-icon {
            width: 20px;
            height: 20px;
            opacity: 0.8;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            flex-wrap: wrap;
            gap: 1rem;
        }

        .copyright {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .footer-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .footer-link {
            color: white;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            border: 1px solid transparent;
        }
            
            .footer-links a{
              text-decoration: none;
              color: #ffffff;
            }

        .footer-link:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-1px);
        }

        .divider {
            width: 1px;
            height: 20px;
            background: rgba(255, 255, 255, 0.3);
        }

        
    </style>
</head>
<header>
        <nav class="navbar">
            <div class="logo">
             <img src="/img/nav.jpg" alt="Logo" /> 
            </div>
            <ul class="nav-links">
                <a href="/Home/Index">Home</a>
                <a href="/Home/Careers">Careers</a>
                <a href="/Home/About">About</a>
                <a href="/Home/Security">Security</a>
            </ul>
           
        </nav>

    </header>
<body>
   

    <!-- Appointments Section -->
    <main class="container" role="main">
        <section aria-label="My Appointments">
            <div class="appt-header">
                <h2><i class="fa-regular fa-calendar" style="margin-right:6px;"></i>My Appointments</h2>
                <a asp-action="Create" class="btn-primary">
                    <i class="fas fa-calendar-plus"></i> Book New Appointment
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (!Model.Any())
            {
                <div class="alert-info" role="alert">
                    You don't have any appointments scheduled. Book one now!
                </div>
            }
            else
            {
                <div class="card-appointments" role="region" aria-live="polite" aria-relevant="additions">
                    <table>
                        <thead>
                            <tr>
                                <th>Date &amp; Time</th>
                                <th>Purpose</th>
                                <th>Status</th>
                                <th>Notes</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model)
                            {
                                var badgeClass = appointment.Status switch
                                {
                                    "Pending" => "bg-warning",
                                    "Approved" => "bg-success",
                                    "Completed" => "bg-info",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                                <tr>
                                    <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                                    <td>@appointment.Purpose</td>
                                    <td>
                                        <span class="badge @badgeClass">@appointment.Status</span>
                                    </td>
                                    <td>@appointment.Notes</td>
                                    <td>
                                        @if (appointment.Status == "Pending" || appointment.Status == "Approved")
                                        {
                                            <a asp-action="Cancel" asp-route-id="@appointment.Id" class="btn-cancel"
                                               onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                                Cancel
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </section>
    </main>

    <!-- Article Section -->
    <section class="main-article" aria-labelledby="service-heading">
        <div class="article-image" aria-hidden="true">
            <img src="https://cdn.qwenlm.ai/2366582a-75c6-49d7-a890-5bd72233a6de/277ecfcd-c79c-44dc-8f75-29bd61cdb4b5_3e265ede-55d8-437a-8084-22e8ae6229df.jpg?key=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJyZXNvdXJjZV91c2VyX2lkIjoiMjM2NjU4MmEtNzVjNi00OWQ3LWE4OTAtNWJkNzIyMzNhNmRlIiwicmVzb3VyY2VfaWQiOiIyNzdlY2ZjZC1jNzljLTQ0ZGMtOGY3NS0yOWJkNjFjZGI0YjUiLCJyZXNvdXJjZV9jaGF0X2lkIjpudWxsfQ.jF0LDj1HQZGLvWSAJlbilHp4u3AAtevQXvpr5t3M67g"
                 alt="Smiling bank staff providing excellent customer service" />
        </div>
        <article class="article-content">
            <h1 id="service-heading">Your Trusted Partner in Financial Success</h1>
            <p>
                At Nexus Bank, we combine cutting-edge technology with personalized service to meet your financial needs.
                Whether personal banking or business solutions, our dedicated experts are here to support your journey.
            </p>
        </article>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials-section" aria-label="Customer Testimonials">
        <h2>Hear From Our Customers</h2>
        <div class="toggle-group" role="tablist" aria-label="Testimonial Categories">
            <button class="toggle-btn active" type="button" id="indivBtn" role="tab" aria-selected="true" aria-controls="carouselCards">For Individuals</button>
            <button class="toggle-btn inactive" type="button" id="bizBtn" role="tab" aria-selected="false" aria-controls="carouselCards">For Businesses</button>
        </div>
        <div class="carousel" id="testimonialCarousel">
            <div class="carousel-cards" id="carouselCards" tabindex="0" aria-live="polite" aria-atomic="true">
                <!-- Testimonials will be injected here via JS -->
            </div>
        </div>
    </section>

       <!-- Footer Section -->
  <footer class="footer">
        <div class="footer-container">
            <div class="footer-main">
                <div class="footer-top">
                    <div class="logo-section">
                        <div class="flogo">NB</div>
                        <h2 class="bank-name">Nexus Bank</h2>
                    </div>
                    
                    <div class="contact-info">
                        <div class="contact-item">
                            <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                            </svg>
                            <span>Nexus@gmail.com</span>
                        </div>
                        
                        <div class="contact-item">
                            <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                            </svg>
                            <span>+20 1300000000</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="footer-bottom">
                <div class="copyright">
                    © 2025 Bank All Rights Reserved
                </div>
                
                <div class="footer-links">
                <a href="/Home/Privacy">Privacy</a>
                    <div class="divider"></div>
                <a href="/Home/Terms">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        const individualsTestimonials = [
            {
                author: "Sara T",
                content: "Nexus Bank has been my trusted financial partner for years. Their personalized service and innovative banking solutions make managing my finances effortless."
            },
            {
                author: "John D",
                content: "Starting my business was made easier thanks to Nexus Bank’s expert guidance and support."
            },
            {
                author: "Emily G",
                content: "The mobile app is user-friendly and secure — perfect for busy people like me."
            }
        ];
        const businessTestimonials = [
            {
                author: "AlfaTech Solutions",
                content: "Nexus Bank understands our business needs and provides tailored financial solutions."
            },
            {
                author: "Eastern Traders Ltd.",
                content: "Reliable services that have kept our operations smooth and efficient."
            },
            {
                author: "GreenFuture Energy",
                content: "Their financing options helped us advance our green initiatives effectively."
            }
        ];

        const carouselCards = document.getElementById('carouselCards');
        const indivBtn = document.getElementById('indivBtn');
        const bizBtn = document.getElementById('bizBtn');

        function renderTestimonials(type) {
            carouselCards.innerHTML = '';
            const list = type === "business" ? businessTestimonials : individualsTestimonials;
            list.forEach(t => {
                const card = document.createElement('div');
                card.classList.add('carousel-card');
                card.innerHTML = `
                    <div class="quote">“</div>
                    <div class="card-content">${t.content}</div>
                    <div class="author">${t.author}</div>
                `;
                carouselCards.appendChild(card);
            });
        }

        function toggleTabs(activeType) {
            if (activeType === "individuals") {
                indivBtn.classList.add('active');
                indivBtn.classList.remove('inactive');
                bizBtn.classList.remove('active');
                bizBtn.classList.add('inactive');
                indivBtn.setAttribute('aria-selected', 'true');
                bizBtn.setAttribute('aria-selected', 'false');
                renderTestimonials("individuals");
            } else {
                bizBtn.classList.add('active');
                bizBtn.classList.remove('inactive');
                indivBtn.classList.remove('active');
                indivBtn.classList.add('inactive');
                indivBtn.setAttribute('aria-selected', 'false');
                bizBtn.setAttribute('aria-selected', 'true');
                renderTestimonials("business");
            }
        }

        indivBtn.addEventListener('click', () => toggleTabs("individuals"));
        bizBtn.addEventListener('click', () => toggleTabs("business"));

        document.addEventListener('DOMContentLoaded', () => {
            renderTestimonials("individuals");
        });
    </script>
</body>
</html>