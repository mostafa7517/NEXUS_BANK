@model BankSystem.ViewModels.AppointmentViewModel
@{
    ViewData["Title"] = "Book Appointment";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Nexus Bank</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        :root {
            --primary: #7ea1ce;
            --secondary: #bdd7ee;
            --deep-blue: #285686;
            --header-bg: #c3daf4;
            --footer-bg: #7ea1ce;
            --footer-light: #c3daf4;
            --white: #f8f8fa;
            --text: #19557b;
        }

        body {
            font-family: 'Montserrat', Arial, sans-serif;
            margin: 0;
            /* background: linear-gradient(135deg, #003366 0%, #001122 50%, #002244 100%); */
            color: var(--text);
              background-image: url('../img/c14.jpg');
  background-size: cover;
  background-repeat: repeat;
  background-position: center;
  background-attachment: fixed;
        }


        .navbar {
            background-color: #003366;
            border: 3px solid #FFF2F2;
            border-radius: 30px;
            padding: 10px 30px;
            margin: 20px auto;
            width: 90%;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: bold;
            color: #fff;
        }

            .logo img {
                width: 40px;
                height: 40px;
                transform: scale(1.5); /* يكبر اللوجو */
                border-radius: 50%;
                margin-left: 160%;
            }

            .logo .highlight {
                color: #d0d0ff;
            }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 25px;
            margin: 0;
            padding-right: 35%;
        }

            .nav-links a {
                color: #ffffff;
                cursor: pointer;
                transition: 0.3s;
                padding: 6px 16px;
                border-radius: 20px;
                font-family: "Tagesschrift", system-ui;
                font-size: 1.2rem;
                text-decoration: none;
            }
        .lang-btn {
            position: absolute;
            right: -110px;
            top: 0;
            background: white;
            color: #222;
            border-radius: 50%;
            width: 88px;
            height: 88px;
            text-align: center;
            line-height: 88px;
            font-size: 1.18rem;
            font-family: inherit;
            font-weight: 400;
            box-shadow: 0 0 4px 0 #ccd;
            transition: background 0.2s;
            border: none;
            cursor: pointer;
        }

        .appoint-section {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin: 48px 0 53px 0;
        }

        .appoint-card {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 40px;
            padding: 58px 48px 36px 48px;
            width: 500px;
            max-width: 98vw;
            color: #19557b;
            box-shadow: 0 8px 32px #7ea1ce22;
            position: relative;
        }

            .appoint-card h2 {
                color:  #285686;
                text-align: center;
                font-size: 2.16rem;
                font-weight: 700;
                margin-bottom: 22px;
                letter-spacing: 0.01em;
            }

        .form-label, .appoint-label {
            font-size: 1.06em;
            color:  #285686;
            font-weight: 600;
            margin-bottom: 4px;
            display: block;
        }

        .form-control, .form-select, .appoint-input, .appoint-select, .appoint-textarea {
            border: none;
            background: white;
            border-radius: 23px;
            padding: 14px 17px;
            font-size: 1.04em;
            color: var(--text);
            outline: none;
            font-family: inherit;
            margin-bottom: 6px;
            width: 100%;
            margin-top: 0;
            box-sizing: border-box;
        }

            .form-control:focus, .appoint-input:focus, .form-select:focus, .appoint-select:focus, .appoint-textarea:focus {
                background: white;
            }

        .text-danger, .validation-summary-errors, .field-validation-error {
            color: #dc3545 !important;
            font-size: 0.98em;
            background: transparent !important;
        }

        .appoint-btn-main {
            background: var(--deep-blue);
            color: #fff;
            border-radius: 32px;
            padding: 5px 0;
            font-size: 1.09rem;
            border: none;
            cursor: pointer;
            font-family: inherit;
            font-weight: 700;
            width: 170px;
            margin-right: 18px;
            transition: background 0.19s;
        }

            .appoint-btn-main:hover {
                background: #13335a;
            }

        .appoint-btn-cancel {
            background: #fff;
            color: var(--deep-blue);
            border-radius: 32px;
            padding: 14px 0;
            font-size: 1.08rem;
            border: 2px solid #285686;
            cursor: pointer;
            font-family: inherit;
            font-weight: 500;
            width: 160px;
            transition: background 0.19s, color 0.19s;
            text-align: center;
            text-decoration: none;
            display: inline-block;
        }

            .appoint-btn-cancel:hover {
                background: var(--secondary);
            }

        .small {
            color: #31668d;
            font-size: 0.99em;
            margin-top: 2px;
        }

        .appoint-row {
            display: flex;
            gap: 17px;
            align-items: center;
            margin-bottom: 6px;
        }

        .footer {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 2rem 0;
            position: relative;
            overflow: hidden;
        }

        .footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 50%);
            pointer-events: none;
        }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            z-index: 2;
        }

        .footer-main {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .footer-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .flogo {
            background: rgba(255, 255, 255, 0.2);
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .bank-name {
            font-size: 2rem;
            font-weight: 300;
            letter-spacing: 1px;
        }

        .contact-info {
            display: flex;
            gap: 2rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .contact-item:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .contact-icon {
            width: 20px;
            height: 20px;
            opacity: 0.8;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            flex-wrap: wrap;
            gap: 1rem;
        }

        .copyright {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .footer-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .footer-link {
            color: white;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            border: 1px solid transparent;
        }
            
            .footer-links a{
              text-decoration: none;
              color: #ffffff;
            }

        .footer-link:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-1px);
        }

        .divider {
            width: 1px;
            height: 20px;
            background: rgba(255, 255, 255, 0.3);
        }
    </style>
</head>

<header>
    <nav class="navbar">
        <div class="logo">
            <img src="/img/nav.jpg" alt="Logo" />
        </div>
        <ul class="nav-links">
            <a href="/Home/Index">Home</a>
            <a href="/Home/Careers">Careers</a>
            <a href="/Home/About">About</a>
            <a href="/Home/Security">Security</a>
        </ul>

    </nav>

</header>
<body>
   
    <!-- Form Card -->
    <div class="appoint-section">
        <div class="appoint-card">
            <h2>📅 Book an Appointment</h2>
            <form asp-action="Create" method="post" autocomplete="off" id="appointForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="margin-bottom:18px;">
                    <label asp-for="AppointmentDate" class="form-label">Date</label>
                    <input id="appointmentDate" type="date" class="form-control" required />

                    <label class="form-label" style="margin-top:6px;">Time</label>
                    <div class="appoint-row">
                        <select id="appointmentHour" class="form-select" required>
                            <option value="">Hour</option>
                            <option value="9">9 AM</option>
                            <option value="10">10 AM</option>
                            <option value="11">11 AM</option>
                            <option value="12">12 PM</option>
                            <option value="13">1 PM</option>
                            <option value="14">2 PM</option>
                        </select>
                        <select id="appointmentMinute" class="form-select" required>
                            <option value="">Minute</option>
                            <option value="00">00</option>
                            <option value="15">15</option>
                            <option value="30">30</option>
                            <option value="45">45</option>
                        </select>
                    </div>
                    <!-- Hidden field to store the actual datetime value -->
                    <input asp-for="AppointmentDate" type="hidden" id="fullAppointmentDateTime" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                    <small class="small">Please select a date and time during business hours (9 AM - 3 PM)</small>
                </div>
                <div style="margin-bottom:17px;">
                    <label asp-for="Purpose" class="form-label">Purpose</label>
                    <select asp-for="Purpose" class="form-select" required>
                        <option value="">-- Select Purpose --</option>
                        <option value="Account Services">Account Services</option>
                        <option value="Loan Consultation">Loan Consultation</option>
                        <option value="Investment Advice">Investment Advice</option>
                        <option value="Mortgage Consultation">Mortgage Consultation</option>
                        <option value="Financial Planning">Financial Planning</option>
                        <option value="Other">Other</option>
                    </select>
                    <span asp-validation-for="Purpose" class="text-danger"></span>
                </div>
                <div style="margin-bottom:17px;">
                    <label asp-for="Notes" class="form-label">Additional Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="4"
                              placeholder="Please provide any additional information that would help us prepare for your appointment"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div style="display:flex; justify-content:end; gap:18px; margin-top: 24px;">
                    <a asp-action="Index" class="appoint-btn-cancel">Cancel</a>
                    <button type="submit" class="appoint-btn-main" id="submitBtn">Book Appointment</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Footer Section -->
  <footer class="footer">
        <div class="footer-container">
            <div class="footer-main">
                <div class="footer-top">
                    <div class="logo-section">
                        <div class="flogo">NB</div>
                        <h2 class="bank-name">Nexus Bank</h2>
                    </div>
                    
                    <div class="contact-info">
                        <div class="contact-item">
                            <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                            </svg>
                            <span>Nexus@gmail.com</span>
                        </div>
                        
                        <div class="contact-item">
                            <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                            </svg>
                            <span>+20 1300000000</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="footer-bottom">
                <div class="copyright">
                    © 2025 Bank All Rights Reserved
                </div>
                
                <div class="footer-links">
                <a href="/Home/Privacy">Privacy</a>
                    <div class="divider"></div>
                <a href="/Home/Terms">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Set minimum date to tomorrow
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);

            // Format to YYYY-MM-DD for date input
            const formattedDate = tomorrow.toISOString().split('T')[0];
            const dateInput = document.querySelector('#appointmentDate');
            dateInput.min = formattedDate;
            dateInput.value = formattedDate;

            // Handle form submission - combine date and time
            document.getElementById('appointForm').addEventListener('submit', function (e) {
                e.preventDefault();

                const date = document.querySelector('#appointmentDate').value;
                const hour = document.querySelector('#appointmentHour').value;
                const minute = document.querySelector('#appointmentMinute').value;

                if (!date || !hour || !minute) {
                    alert('Please select date, hour, and minute for your appointment.');
                    return;
                }

                // Combine into datetime string in format YYYY-MM-DDThh:mm:ss
                const combinedDateTime = `${date}T${hour}:${minute}:00`;
                document.querySelector('#fullAppointmentDateTime').value = combinedDateTime;

                // Submit the form
                this.submit();
            });
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>