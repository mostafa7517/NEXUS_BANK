@model BankSystem.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Nexus Bank</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        :root {
            --primary: #7ea1ce;
            --secondary: #bdd7ee;
            --deep-blue: #285686;
            --header-bg: #c3daf4;
            --footer-bg: #7ea1ce;
            --footer-light: #c3daf4;
            --white: #f8f8fa;
            --text: #19557b;
        }

        body {
            font-family: 'Montserrat', Arial, sans-serif;
            margin: 0;
            /* background: var(--white) url('https://i.postimg.cc/gjWMCd9p/Chat-GPT-Image-May-3-2025-04-36-36-PM.png') no-repeat center center fixed; */
            background-size: cover;
            color: var(--text);
            background-image: url('../img/c1.jpg');
            background-repeat: repeat;
            background-position: center;
            height: 100vh;
            background-attachment: fixed;
        }


        .navbar {
            background-color: #003366;
            border: 3px solid #FFF2F2;
            border-radius: 30px;
            padding: 10px 30px;
            margin: 20px auto;
            width: 90%;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: bold;
            color: #fff;
        }

            .logo img {
                width: 40px;
                height: 40px;
                transform: scale(1.5); /* يكبر اللوجو */
                border-radius: 50%;
                margin-left: 160%;
            }

            .logo .highlight {
                color: #d0d0ff;
            }

        .nav-links {
            list-style: none;
            display: flex;
            gap: 25px;
            margin: 0;
            padding-right: 35%;
        }

            .nav-links a {
                color: #ffffff;
                cursor: pointer;
                transition: 0.3s;
                padding: 6px 16px;
                border-radius: 20px;
                font-family: "Tagesschrift", system-ui;
                font-size: 1.2rem;
                text-decoration: none;
            }

        /* Reset Password Card */
        .reset-section {
            display: flex;
            justify-content: center;
            margin: 48px 0 0 0;
            position: relative;
            z-index: 2;
            min-height: 68vh;
        }

        .reset-card {
            background: rgba(255, 255, 255, 0.4);
            border-radius: 40px;
            padding: 70px 44px;
            min-width: 340px;
            max-width: 1080px;
            position: relative;
            color: #fff;
            overflow: hidden;
        }

            .reset-card h2 {
                color: #2a5782;
                text-align: center;
                font-size: 2.3rem;
                font-weight: 700;
                margin-bottom: 16px;
                position: relative;
                z-index: 1;
            }

        .reset-form {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 24px;
            z-index: 1;
            position: relative;
            width: 100%;
        }

        .row {
            display: flex;
            gap: 32px;
            margin-bottom: 0;
            width: 100%;
            justify-content: center;
        }

        .reset-input, .reset-select {
            border: none;
            background: #003366;
            border-radius: 30px;
            padding: 23px 34px;
            font-size: 1rem;
            width: 330px;
            color: white;
            outline: none;
            margin-bottom: 0;
            font-family: inherit;
            box-sizing: border-box;
        }

            .reset-input:focus, .reset-select:focus {
                background: #003366;
            }

        .password-wrap {
            position: relative;
            width: 330px;
        }

        .eye-icon {
            position: absolute;
            right: 24px;
            top: 56%;
            transform: translateY(-50%);
            font-size: 1.14em;
            color: #233d55;
            background: transparent;
            border: none;
            cursor: pointer;
            opacity: 0.67;
        }

        .text-danger, .validation-summary-errors, .field-validation-error {
            color: #dc3545 !important;
            font-size: 0.96em;
            background: transparent !important;
        }

        .reset-btn-main {
            width: 88%;
            margin: 20px auto 0;
            padding: 18px 0;
            border-radius: 32px;
            font-size: 1.15rem;
            border: none;
            cursor: pointer;
            display: block;
            font-family: inherit;
            font-weight: 600;
            background: var(--deep-blue);
            color: #fff;
            transition: background 0.2s;
        }

            .reset-btn-main:hover {
                background: #13335a;
            }

        .reset-btn-secondary {
            width: 88%;
            margin: 12px auto 0;
            padding: 18px 0;
            border-radius: 32px;
            font-size: 1.15rem;
            border: 2px solid #285686;
            cursor: pointer;
            display: block;
            font-family: inherit;
            font-weight: 500;
            background: #fff;
            color: var(--deep-blue);
            transition: background 0.2s, color 0.2s;
            text-align: center;
            text-decoration: none;
        }

            .reset-btn-secondary:hover {
                background: var(--secondary);
            }

        .alert-danger {
            background-color: #fad2d2;
            color: #d21414;
            border-radius: 15px;
            padding: 0.6em 1em;
            margin-top: 0.9em;
            text-align: center;
            font-size: 1.04em;
        }

        /* Progress bar for password */
        .progress {
            background: #bdd7ee;
            border-radius: 4px;
            height: 5px;
            width: 80%;
            margin: 0 auto;
            margin-top: 10px;
        }

        .progress-bar {
            background: #19557b;
            height: 100%;
            transition: width 0.3s, background 0.3s;
        }

        .footer {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 2rem 0;
            position: relative;
            overflow: hidden;
        }

            .footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 50%);
                pointer-events: none;
            }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            z-index: 2;
        }

        .footer-main {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .footer-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .flogo {
            background: rgba(255, 255, 255, 0.2);
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .bank-name {
            font-size: 2rem;
            font-weight: 300;
            letter-spacing: 1px;
        }

        .contact-info {
            display: flex;
            gap: 2rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

            .contact-item:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: translateY(-2px);
            }

        .contact-icon {
            width: 20px;
            height: 20px;
            opacity: 0.8;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            flex-wrap: wrap;
            gap: 1rem;
        }

        .copyright {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .footer-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .footer-link {
            color: white;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            border: 1px solid transparent;
        }

        .footer-links a {
            text-decoration: none;
            color: #ffffff;
        }

        .footer-link:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-1px);
        }

        .divider {
            width: 1px;
            height: 20px;
            background: rgba(255, 255, 255, 0.3);
        }
    </style>
</head>

<header>
    <nav class="navbar">
        <div class="logo">
            <img src="/img/nav.jpg" alt="Logo" />
        </div>
        <ul class="nav-links">
            <a href="/Home/Index">Home</a>
            <a href="/Home/Careers">Careers</a>
            <a href="/Home/About">About</a>
            <a href="/Home/Security">Security</a>
        </ul>

    </nav>

</header>
<body>


    <!-- Main Reset Password Card -->
    <div class="reset-section">
        <div class="reset-card">
            <h2>Reset Password</h2>
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert-danger">@TempData["ErrorMessage"]</div>
            }

            <form asp-action="ResetPassword" method="post" class="reset-form" autocomplete="off" onsubmit="return validatePasswordMatch()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div style="display:flex; flex-direction:column;">
                        <select asp-for="UserType" class="reset-select">
                            <option value="Customer">Customer</option>
                            <option value="Employee">Employee</option>
                        </select>
                    </div>
                    <div style="display:flex; flex-direction:column;">
                        <input asp-for="Username" class="reset-input" placeholder="Username" autocomplete="username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div style="display:flex; flex-direction:column;">
                        <span class="password-wrap">
                            <input asp-for="CurrentPassword" type="password" class="reset-input" placeholder="Current Password" autocomplete="current-password" id="currentPassword" />
                            <button type="button" class="eye-icon" onclick="togglePassword('currentPassword')" tabindex="-1">&#128065;</button>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </span>
                    </div>
                    <div style="display:flex; flex-direction:column;">
                        <span class="password-wrap">
                            <input asp-for="NewPassword" type="password" class="reset-input" placeholder="New Password" autocomplete="new-password" id="newPassword" oninput="checkPasswordStrength()" />
                            <button type="button" class="eye-icon" onclick="togglePassword('newPassword')" tabindex="-1">&#128065;</button>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </span>
                    </div>
                </div>

                <div class="row">
                    <div style="display:flex; flex-direction:column;">
                        <span class="password-wrap">
                            <input asp-for="ConfirmPassword" type="password" class="reset-input" placeholder="Confirm Password" autocomplete="new-password" id="confirmPassword" />
                            <button type="button" class="eye-icon" onclick="togglePassword('confirmPassword')" tabindex="-1">&#128065;</button>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </span>
                    </div>
                </div>

                <div class="progress mt-2" style="height: 5px; width:80%;">
                    <div id="passwordStrengthBar" class="progress-bar" role="progressbar" style="width: 0%"></div>
                </div>
                <small id="passwordStrengthText" class="text-muted" style="color:white!important"></small>
                <span id="passwordError" class="text-danger" style="display:none;">Passwords do not match.</span>

                <button type="submit" class="reset-btn-main">Reset Password</button>
                <a asp-action="Login" class="reset-btn-secondary">Back to Login</a>
            </form>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-main">
                <div class="footer-top">
                    <div class="logo-section">
                        <div class="flogo">NB</div>
                        <h2 class="bank-name">Nexus Bank</h2>
                    </div>

                    <div class="contact-info">
                        <div class="contact-item">
                            <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                            </svg>
                            <span>Nexus@gmail.com</span>
                        </div>

                        <div class="contact-item">
                            <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                            </svg>
                            <span>+20 1300000000</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="copyright">
                    © 2025 Bank All Rights Reserved
                </div>

                <div class="footer-links">
                    <a href="/Home/Privacy">Privacy</a>
                    <div class="divider"></div>
                    <a href="/Home/Terms">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        function togglePassword(id) {
            const input = document.getElementById(id);
            input.type = input.type === "password" ? "text" : "password";
        }

        function validatePasswordMatch() {
            const newPassword = document.getElementById("newPassword").value;
            const confirmPassword = document.getElementById("confirmPassword").value;
            const error = document.getElementById("passwordError");

            if (newPassword !== confirmPassword) {
                error.style.display = "block";
                return false;
            }
            error.style.display = "none";
            return true;
        }

        function checkPasswordStrength() {
            const password = document.getElementById("newPassword").value;
            const bar = document.getElementById("passwordStrengthBar");
            const text = document.getElementById("passwordStrengthText");

            let strength = 0;
            if (password.length >= 8) strength += 1;
            if (/[A-Z]/.test(password)) strength += 1;
            if (/[0-9]/.test(password)) strength += 1;
            if (/[\W_]/.test(password)) strength += 1;

            let barWidth = strength * 25;
            let color, label;
            switch (strength) {
                case 0:
                    color = "bg-danger";
                    label = "Very Weak";
                    break;
                case 1:
                    color = "bg-danger";
                    label = "Weak";
                    break;
                case 2:
                    color = "bg-warning";
                    label = "Moderate";
                    break;
                case 3:
                    color = "bg-info";
                    label = "Strong";
                    break;
                case 4:
                    color = "bg-success";
                    label = "Very Strong";
                    break;
            }
            // Strength bar
            bar.style.backgroundColor = {
                "bg-danger": "#c33",
                "bg-warning": "#ffc107",
                "bg-info": "#17a2b8",
                "bg-success": "#28a745"
            }[color];
            bar.style.width = `${barWidth}%`;
            text.textContent = label;
        }
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>