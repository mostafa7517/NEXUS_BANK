  align-items: center;
  justify-content: space-between;
  margin-top:-10%;
}

.logo {
  display: flex;
  align-items: center;
  gap: 10px;
  font-weight: bold;
  color: #fff;
}

.logo img {
  width: 40px;
  height: 40px;
