@{
    ViewData["Title"] = "New Card";
    var accounts = (List<BankSystem.Data.BankAccount>)ViewBag.Accounts;
    var types = (List<BankSystem.Models.CardType>)ViewBag.CardTypes;
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Yrsa:ital,wght@0,300..700;1,300..700&display=swap" rel="stylesheet">

    </head>

<style>
    body{
          font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            /* background: linear-gradient(135deg, #003366 0%, #764ba2 100%); */
            min-height: 90vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            font-family: 'Arial', sans-serif;
             background-image: url('../img/c14.jpg');
            background-size: cover;
            background-repeat: repeat;
            background-position: center;
            background-attachment: fixed;
    }
    .navbar {
  background-color: #003366;
 border: 3px solid #FFF2F2;
  border-radius: 30px;
  padding: 10px 30px;
  margin: 20px auto ;
  width: 90%;
