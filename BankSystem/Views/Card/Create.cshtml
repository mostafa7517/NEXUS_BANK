}


   h2{
       margin-top:5%;
        font-family: "Berkshire Swash", serif;
    }

  
    </style>

    <header>
        <nav class="navbar">
            <div class="logo">
             <img src="/img/nav.jpg" alt="Logo" /> 
            </div>
            <ul class="nav-links">
                <a href="/Home/Index">Home</a>
                <a href="/Home/Careers">Careers</a>
                <a href="/Home/About">About</a>
                <a href="/Home/Security">Security</a>
            </ul>
           
        </nav>

    </header>
<h2>Issue New Card</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="accountId" class="form-label">Select Account</label>
        <select name="accountId" class="form-select" required>
            <option value="">-- choose --</option>
            @foreach (var a in accounts)
            {
                <option value="@a.Id">Acct #@a.Id (@a.Balance:C)</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="type" class="form-label">Card Type</label>
        <select name="type" class="form-select" required>
            <option value="">-- choose --</option>
            @foreach (var t in types)
            {
                <option value="@t">@t</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success">Create Card</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
