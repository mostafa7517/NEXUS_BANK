@{
    ViewData["Title"] = "Faqs";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NEXUS BANK - Frequently Asked Questions</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-image: url('../img/c1.jpg');
            background-size: cover;
            background-repeat: repeat;
            background-position: center;
            height: 80vh;
            color: var(--text);
            font-family: 'Montserrat', Arial, sans-serif;
            min-height: 100vh;
            color: white;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .auth-buttons {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-top: 10%;
            margin-left: 3%;
        }

            .auth-buttons a {
                background-color: #003366;
                color: #FFF2F2;
                border: none;
                border-radius: 20px;
                padding: 6px 16px;
                cursor: pointer;
                font-family: "Tagesschrift", system-ui;
            }

                .auth-buttons a:hover {
                    background-color: #FFF2F2;
                    color: #003366;
                }
          

        /* Hero Section */
        .hero {
            padding: 80px 0;
            text-align: center;
        }

        .hero-content {
            background: rgba(0, 51, 102, 0.8);
            backdrop-filter: blur(15px);
            padding: 60px;
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
            max-width: 800px;
            margin: 0 auto;
        }

        .hero h1 {
             -size: 42px;
            font-weight: bold;
            margin-bottom: 20px;
            line-height: 1.2;
            color: white;
        }

        .hero p {
            font-size: 16px;
            opacity: 0.9;
            line-height: 1.5;
        }

        /* FAQ Section */
        .faq-section {
            padding: 80px 0;
        }

        .faq-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }

        .faq-column {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        .faq-card {
            background: rgba(0, 51, 102, 0.7);
            backdrop-filter: blur(10px);
            padding: 30px;
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .faq-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(0, 0, 0, 0.3);
            }

            .faq-card h3 {
                font-size: 18px;
                color: #66ccff;
                margin-bottom: 15px;
                font-weight: bold;
            }

            .faq-card p {
                font-size: 14px;
                line-height: 1.6;
                opacity: 0.9;
            }

       
        .footer {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            padding: 2rem 0;
            position: relative;
            overflow: hidden;
            margin-bottom: -10%;
        }

            .footer::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, transparent 50%);
                pointer-events: none;
            }

        .footer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            position: relative;
            z-index: 2;
        }

        .footer-main {
            display: flex;
            flex-direction: column;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .footer-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .logo-section {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .flogo {
            background: rgba(255, 255, 255, 0.2);
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .bank-name {
            font-size: 2rem;
            font-weight: 300;
            letter-spacing: 1px;
        }

        .contact-info {
            display: flex;
            gap: 2rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            backdrop-filter: blur(5px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

            .contact-item:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: translateY(-2px);
            }

        .contact-icon {
            width: 20px;
            height: 20px;
            opacity: 0.8;
        }

        .footer-bottom {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
            flex-wrap: wrap;
            gap: 1rem;
        }

        .copyright {
            font-size: 0.9rem;
            opacity: 0.8;
        }

        .footer-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .footer-link {
            color: white;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            border: 1px solid transparent;
        }

        .footer-links a {
            text-decoration: none;
            color: #ffffff;
        }

        .footer-link:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateY(-1px);
        }

        .divider {
            width: 1px;
            height: 20px;
            background: rgba(255, 255, 255, 0.3);
        }
      

        /* Animated background pattern */
        .bg-pattern {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.1;
            background-image: radial-gradient(circle at 20% 50%, rgba(102, 204, 255, 0.3) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(102, 204, 255, 0.2) 0%, transparent 50%), radial-gradient(circle at 40% 80%, rgba(102, 204, 255, 0.2) 0%, transparent 50%);
            animation: float 20s ease-in-out infinite;
        }

    </style>
</head>
<body>
    <div class="bg-pattern"></div>
    <div class="auth-buttons">
        <a class="btn" href="/Home/Index">Home</a>

        <a class="btn" href="/Account/Register">Sign Up</a>
        <a class="btn" href="/Account/Login">Login</a>
    </div>


    <main>
        <section class="hero">
            <div class="container">
                <div class="hero-content">
                    <h1>Frequently Asked Questions</h1>
                    <p>If you can't find the answer to your question here, please don't hesitate to contact us.</p>
                </div>
            </div>
        </section>

        <section class="faq-section">
            <div class="container">
                <div class="faq-grid">
                    <div class="faq-column">
                        <div class="faq-card">
                            <h3>Opening an account with NEXUS is easy. Simply visit us at a branch each day or visit our online banking portal to manage your account.</h3>
                            <p>The steps are straightforward and available to you 24/7 for convenient banking. Access account information, transfer funds, pay bills, and more with our comprehensive online platform that keeps you connected to your finances.</p>
                        </div>

                        <div class="faq-card">
                            <h3>How do I change my address or other personal information on my account?</h3>
                            <p>You can update your personal information through our online banking platform, by visiting any branch location, or by calling our customer service line. For security purposes, we may require identity verification for certain changes.</p>
                        </div>

                        <div class="faq-card">
                            <h3>What should I do if I notice unauthorized transactions on my account?</h3>
                            <p>Contact us immediately if you notice any suspicious activity. Our fraud protection team is available 24/7 to assist you. We recommend reviewing your statements regularly and setting up account alerts for added security.</p>
                        </div>
                    </div>

                    <div class="faq-column">
                        <div class="faq-card">
                            <h3>The site loading happens for a slow-speed device this will disappear as the page loads and all the data appears.</h3>
                            <p>Our website is optimized for all devices and connection speeds. If you continue to experience slow loading times, please clear your browser cache, ensure a stable internet connection, or try accessing from a different device.</p>
                        </div>

                        <div class="faq-card">
                            <h3>What are the fees associated with my account?</h3>
                            <p>Account fees vary by account type and usage. You can find detailed fee information in your account agreement, on our website's fee schedule, or by contacting customer service. We believe in transparent pricing with no hidden charges.</p>
                        </div>

                        <div class="faq-card">
                            <h3>How can I set up direct deposit or automatic payments?</h3>
                            <p>Direct deposit and automatic payments can be set up through online banking, at any branch, or by completing the appropriate forms. You'll need your account and routing numbers, which can be found on your checks or in online banking.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

       
    <footer class="footer">
        <div class="footer-container">
            <div class="footer-main">
                <div class="footer-top">
                    <div class="logo-section">
                        <div class="flogo">NB</div>
                        <h2 class="bank-name">Nexus Bank</h2>
                    </div>

                    <div class="contact-info">
                        <div class="contact-item">
                            <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                            </svg>
                            <span>Nexus@gmail.com</span>
                        </div>

                        <div class="contact-item">
                            <svg class="contact-icon" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z" />
                            </svg>
                            <span>+20 1300000000</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="copyright">
                    © 2025 Bank All Rights Reserved
                </div>

                <div class="footer-links">
                    <a href="/Home/Privacy">Privacy</a>
                    <div class="divider"></div>
                    <a href="/Home/Faqs">Faqs</a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Add functionality to Load More button
        document.querySelector('.load-more-btn').addEventListener('click', function() {
            this.textContent = 'Loading...';
            setTimeout(() => {
                this.textContent = 'Load More FAQs';
                // Here you would typically load more FAQ content
            }, 1000);
        });

        // Add smooth scrolling for better UX
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
</html>