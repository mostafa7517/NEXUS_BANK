                  targetSection.classList.remove('hidden');

                  setTimeout(() => {
                    targetSection.classList.add('show');
                  }, 10);
                });
              });
            });


               // Number animation function
                function animateNumbers() {
                    const numberElements = document.querySelectorAll('.animated-number');
                    const speed = 300; // lower is faster

                    numberElements.forEach(element => {
                        const target = parseInt(element.getAttribute('data-target'));
                        const increment = target / speed;
                        let current = 0;

                        const updateNumber = () => {
                            current += increment;
                            if (current < target) {
                                element.textContent = Math.floor(current);
                                setTimeout(updateNumber, 1);
                            } else {
                                element.textContent = target;
                            }
                        };

                        // Start animation when element is in viewport
                        const observer = new IntersectionObserver((entries) => {
                            if (entries[0].isIntersecting) {
                                updateNumber();
                                observer.unobserve(element);
                            }
                        });

                        observer.observe(element);
                    });
                }

                // Run animation when page loads
                window.addEventListener('load', animateNumbers);



                  let currentTab = 'individuals';
                let currentSlide = 0;
                const maxSlides = 1; // نحتاج slide واحد فقط لكل مجموعة

                function switchTab(tab) {
                    const buttons = document.querySelectorAll('.tab-button');
                    const track = document.getElementById('testimonialsTrack');

                    // تحديث الأزرار
                    buttons.forEach(btn => btn.classList.remove('active'));
                    event.target.classList.add('active');

                    // تحديث المحتوى
                    currentTab = tab;
                    currentSlide = 0;

                    if (tab === 'individuals') {
                        track.style.transform = 'translateX(0%)';
                    } else {
                        track.style.transform = 'translateX(-50%)';
                    }

                    updateNavButtons();
                }

                function nextSlide() {
                    // يمكن إضافة المزيد من الشرائح هنا إذا لزم الأمر
                    if (currentSlide < maxSlides) {
                        currentSlide++;
                        updateSlider();
                    }
                }

                function previousSlide() {
                    if (currentSlide > 0) {
                        currentSlide--;
                        updateSlider();
                    }
                }

                function updateSlider() {
                    const track = document.getElementById('testimonialsTrack');
                    const baseTransform = currentTab === 'individuals' ? 0 : -50;
                    track.style.transform = 'translateX(${baseTransform}%)';
                    updateNavButtons();
                }

            
         
