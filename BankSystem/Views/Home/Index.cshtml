        <script>
            const rates = {
              USD: {
                EGP: 50.74,
                EUR: 0.88,
                GBP: 0.75,
                BTC: 0.000010,
                JPY: 143.97,
              },
            };

            // توليد كل التحويلات من USD
            for (const to in rates.USD) {
              const value = rates.USD[to];
              if (!rates[to]) rates[to] = {};
              rates[to]["USD"] = 1 / value;
            }

            // بناء باقي التحويلات
            const currencies = ["EGP", "EUR", "GBP", "BTC", "JPY"];
            for (let from of currencies) {
              for (let to of currencies) {
                if (from !== to) {
                  rates[from][to] = rates[from]["USD"] * rates["USD"][to];
                }
              }
            }

            function convert() {
              const from = document.getElementById("from").value;
              const to = document.getElementById("to").value;
              const amount = parseFloat(document.getElementById("amount").value);

              if (isNaN(amount) || !rates[from] || !rates[from][to]) {
                document.getElementById("result").innerText = "Please enter a valid amount and select supported currencies.";
                return;
              }

              const result = amount * rates[from][to];
              document.getElementById("result").innerText = `${amount} ${from} = ${result.toFixed(2)} ${to}`;
            }

            document.getElementById("exchangeButton").addEventListener("click", convert);



